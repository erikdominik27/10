#include <stdio.h>

int checker(int a);

int main()
{
    int a;
    printf("Please enter a number: ");
    scanf("%d", &a);
    if (checker(a)==1){
        printf("The number is positive.");
    }
     else if (checker(a)==-1){
         printf("The number is negative.");
     }
     
    else {
        printf("Number is 0.");
    }
}

int checker(int a){
    int b=0;
    if (a>b){
        return 1;
    }
     else if (a<b){
     return -1;
     }
     else{
         
     return 0;
}
}